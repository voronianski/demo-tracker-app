/* ^Tracker */
.tracker ul
	margin-left: 5px;

.tracker .task-item 
	background: #fff
	size: 260px 56px
	padding: 20px
	margin: 10px 15px
	position: relative
	overflow: hidden
	box-shadow(1px 1px 2px rgba(0,0,0,.2))

.tracker .task-item .title
	fs: 1.2em
	color: #000
	text-overflow(170px)

.tracker .task-item .task-timer
	fs: 2.1em
	color: #e41c24

.task-item .action-btn
	color: #333
	border: none
	fw: 800
	font-family: font-stack
	background: #e9e9e9
	border-radius: 3px
	upcase()
	size: 80px 45px
	margin-top: 6px
	cursor: pointer
	transition(background 300ms ease-in)

.task-item .action-btn:hover
	background: #e2e2e2

.tracker .task-item .delete-task
	background: url('../images/icon-sprite.png') 0 0 no-repeat
	size: 9px
	absolute: top 5px right 5px
	cursor: pointer

.tracker .task-item .delete-task:hover
	background-position: 0 -9px

.not-available
	fs: 1.5em
	fw: 800
	color: #333
	text-align: center
	padding: 50px 0

.preloader
	absolute: top 0px left 0px
	width: 100%
	height: 100%
	background: #fff
	opacity: 0.6
	z-index: 1000

.preloader .icon-spinner
	size: 25px
	margin: 180px auto 5px
	border-radius: 50%
	background: transparent
	border-top: 4px solid #ddd
	border-right: 4px solid #ddd
	border-bottom: 4px solid #999
	border-left: 4px solid #999
	animation: loading 1.2s infinite linear

.preloader h6
	color: #999
	text-align: center
	margin-top: 10px
	fs: 12px
	upcase()